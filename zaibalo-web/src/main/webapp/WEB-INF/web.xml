<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="zaibalo-web" version="3.0">

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/mvc-dispatcher-servlet.xml
		</param-value>
	</context-param>
	
	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
		<param-value>ua.com.zaibalo.i18n.ResourceBundle</param-value>
	</context-param>

	<context-param>
		<param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
		<param-value>uk_UA</param-value>
	</context-param>

	<context-param>
		<param-name>application.conf.file.name</param-name>
		<param-value>application.conf</param-value>
	</context-param>

	<context-param>
		<param-name>UserSessionLifeTime</param-name>
		<param-value>60000</param-value>
	</context-param>

	<context-param>
		<param-name>SessionTrackerSleepTime</param-name>
		<param-value>3000</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<filter>
		<filter-name>Encoding</filter-name>
		<filter-class>ua.com.zaibalo.filters.EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>SecureActionFilter</filter-name>
		<filter-class>ua.com.zaibalo.filters.SecureActionFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SecureActionFilter</filter-name>
		<url-pattern>/secure_action/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>SecureFilter</filter-name>
		<filter-class>ua.com.zaibalo.filters.SecureFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SecureFilter</filter-name>
		<url-pattern>/secure/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>mvc-dispatcher</servlet-name>
		<servlet-class>
			org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>mvc-dispatcher</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	

</web-app>
